<%- include('../partials/header', { title: 'Login' }) %>
<h2>Create New Contact</h2>



<form action="/contacts" method="POST">
  <div class="mb-3">
    <label for="lead" class="form-label">Lead</label>
    <select class="form-select" id="lead" name="lead" required>
      <option value="" disabled selected>Select a lead</option>
      <% leads.forEach(lead => { %>
        <option value="<%= lead._id %>"><%= lead.restaurantName %></option>
      <% }) %>
    </select>    
  </div>
  <div class="mb-3">
    <label for="name" class="form-label">Contact Name</label>
    <input type="text" class="form-control" id="name" name="name" required>
  </div>
  <div class="mb-3">
    <label for="role" class="form-label">Role</label>
    <input type="text" class="form-control" id="role" name="role" required>
  </div>
  <div class="mb-3">
    <label for="phone" class="form-label">Phone</label>
    <input type="text" class="form-control" id="phone" name="phone" required>
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" id="email" name="email" required>
  </div>
  <button type="submit" class="btn btn-primary">Create Contact</button>
</form>

<a href="/contacts" class="btn btn-secondary">Back to Contacts</a>
<%- include('../partials/footer') %>