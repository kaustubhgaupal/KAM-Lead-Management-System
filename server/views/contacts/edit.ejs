<%- include('../partials/header', { title: 'Edit Contact' }) %>
<h2 class="my-4">Edit Contact</h2>

<form action="/contacts/<%= contact._id %>?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="lead" class="form-label">Lead</label>
    <select class="form-select" id="lead" name="lead" required>
      <% leads.forEach(lead => { %>
        <option value="<%= lead._id %>" <%= contact.lead._id.toString() === lead._id.toString() ? 'selected' : '' %>><%= lead.name %></option>
      <% }) %>
    </select>
  </div>
  <!-- Other fields remain unchanged -->
  <button type="submit" class="btn btn-primary">Save Changes</button>
  <a href="/contacts" class="btn btn-secondary">Cancel</a>
</form>
<%- include('../partials/footer') %>
