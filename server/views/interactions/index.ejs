<%- include('../partials/header', { title: 'Login' }) %>

<h2>Interactions</h2>

<% if (interactions.length === 0) { %>
  <p>No interactions available.</p>
<% } else { %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Lead</th>
        <th scope="col">Type</th>
        <th scope="col">Date</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% interactions.forEach(interaction => { %>
        <tr>
          <td><%= interaction.lead.restaurantName %></td>
          <td><%= interaction.type %></td>
          <td><%= interaction.date %></td>
          <td>
            <a href="/interactions/<%= interaction._id %>" class="btn btn-info">View</a>
            <a href="/interactions/<%= interaction._id %>/edit" class="btn btn-warning">Edit</a>
            <form action="/interactions/<%= interaction._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>

<a href="/interactions/new" class="btn btn-primary">Create New Interaction</a>

<%- include('../partials/footer') %>